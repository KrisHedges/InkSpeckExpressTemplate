// Set the width of the grid in %
// Set the minwidth of the grid in px

gridWidth = 1024px  
minWidth = 1024px 

// Apply the grid() Mixin to any container element in your CSS.
// Or
// Create a parent div using the .grid convenience class.

grid()
  position relative
  width gridWidth
  min-width minWidth
  margin 0 auto 
  overflow hidden

.grid
  grid()

body 
  min-width minWidth
  width 100%
  height 100%  

